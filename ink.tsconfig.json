{
  // stanard configuration for ink applications. This file
  // is a merge of the standard file from
  // @sindresorhus/tsconfig/tsconfig.json and the config
  // file which is produced when running create-ink-app
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "resolveJsonModule": false,
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noEmitOnError": true,
    "useDefineForClassFields": true,
    "outDir": "dist"
  },
  "include": ["source"]
}
